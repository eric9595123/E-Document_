<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>
            com.advantech.listener.HibernateListener
        </listener-class>
    </listener>
    
    <listener>
        <listener-class>
            com.advantech.listener.ContextListener
        </listener-class>
    </listener>
    
    <!--    <filter>
        <filter-name>hibernateFilterChain</filter-name>
        <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>hibernateFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>-->
    
    <!--global context setting--> 
    
    <context-param>
        <param-name>pageTitle</param-name>
        <param-value>E-Document</param-value>
    </context-param>
    
    <context-param>
        <param-name>VISITOR_PERMISSION</param-name>
        <param-value>0</param-value>
    </context-param>
    
    <context-param>
        <param-name>SPECIAL_VISITOR_PERMISSION</param-name>
        <param-value>1</param-value>
    </context-param>
    
    <context-param>
        <param-name>DATA_OPERATOR_PERMISSION</param-name>
        <param-value>2</param-value>
    </context-param>
    
    <context-param>
        <param-name>DATA_OPERATOR_LEADER_PERMISSION</param-name>
        <param-value>3</param-value>
    </context-param>
    
    <context-param>
        <param-name>SYSOP_PERMISSION</param-name>
        <param-value>5</param-value>
    </context-param>
    
    <context-param>
        <param-name>SYSOP_OPERATE_AREA_PERMISSION</param-name>
        <param-value>5</param-value>
    </context-param>
    
    <context-param>
        <param-name>TEST_FIELD_ACCESS_LIMIT_PERMISSION</param-name>
        <param-value>5</param-value>
    </context-param>
    
    <!--filter mapping--> 
    
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.advantech.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.advantech.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/pages/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>PermissionFilter</filter-name>
        <filter-class>com.advantech.filter.PermissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PermissionFilter</filter-name>
        <url-pattern>/pages/mod/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>UserNameRecordFilter</filter-name>
        <filter-class>com.advantech.filter.UserNameRecordFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserNameRecordFilter</filter-name>
        <url-pattern>/updateSheet.do</url-pattern>
        <url-pattern>/uploadFile.do</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/pages/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/pages/</url-pattern>
        <url-pattern>/pages/index.jsp</url-pattern>
    </servlet-mapping> 

    <!--url mapping-->
    
    <servlet>
        <servlet-name>Error</servlet-name>
        <jsp-file>/pages/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/pages/Error</url-pattern>
    </servlet-mapping>

    <!-- Processes application requests -->
    <servlet>
        <servlet-name>appServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>
