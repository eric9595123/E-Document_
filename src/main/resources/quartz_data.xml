    <!--定時查看sensor是否異常，回報-->
    <schedule>
        <job>
            <name>CheckSensor</name>
            <job-class>com.advantech.quartzJob.CheckSensor</job-class>
        </job>
        <trigger>
            <cron>
                <name>CheckSensor</name>
                <job-name>CheckSensor</job-name>
                <cron-expression>0 0,30 9-11,13-16 ? * MON-SAT *</cron-expression>
            </cron>
        </trigger>
    </schedule>
    
    <!--禮拜三零點固定將Database的sensor unused的資料clean一次-->
    <schedule>
        <job>
            <name>CleanSensorData</name>
            <job-class>com.advantech.quartzJob.CleanSensorData</job-class>
        </job>
        <trigger>
            <cron>
                <name>CleanSensorData</name>
                <job-name>CleanSensorData</job-name>
                <cron-expression>0 0 0 ? * WED *</cron-expression>
            </cron>
        </trigger>
    </schedule>
    
